# Hedera EVM Network Configuration
# Use Hedera Testnet for development, Mainnet for production

# Hedera Testnet
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_CHAIN_ID=296
NEXT_PUBLIC_HEDERA_RPC_URL=https://testnet.hashio.io/api

# Hedera Mainnet (uncomment for production)
# NEXT_PUBLIC_HEDERA_NETWORK=mainnet
# NEXT_PUBLIC_HEDERA_CHAIN_ID=295
# NEXT_PUBLIC_HEDERA_RPC_URL=https://mainnet.hashio.io/api

# Smart Contract Addresses (deploy your contracts and add addresses here)
NEXT_PUBLIC_TOKEN_REPUTATION_CONTRACT_ADDRESS=

# Optional: WalletConnect Project ID (for WalletConnect integration)
# Get one at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# API Endpoints (if backend is separate)
NEXT_PUBLIC_API_URL=http://localhost:8000
